---
import HeroIlust from "@/assets/pics/hero.webp";
// import HeroIlust from "@/assets/pics/heroNavidad.webp";
import { Image } from "astro:assets";
import Button from "@/components/ui/Button.astro";
---

<div
  class="px-8 sm:px-16 relative min-h-[calc(100dvh-80px)] mt-[80px] w-full flex flex-col-reverse items-center md:flex-row pt-20 justify-items-end md:justify-normal"
  id="hero"
>
  <Image
    src={HeroIlust}
    alt="Fondo hero"
    loading="eager"
    fetchpriority="high"
    class="absolute inset-0 w-full h-full object-cover object-[-250px_top] sm:object-left-top lg:object-top -z-10"
  />
  <div class="absolute inset-0 z-0 bg-black opacity-10"></div>
  <div
    class="relative z-10 w-full max-w-[1280px] mx-auto flex flex-col-reverse items-start md:items-center md:flex-row"
  >
    <div class="items-start py-5 w-full md:w-8/12 md:pb-20 md:pt-10">
      <div class="text-left space-y-3">
        <h1
          id="hero-title"
          class="text-4xl font-medium leading-none md:text-6xl text-left md:text-left text-white opacity-0 translate-y-10"
        >
          Soluciones Eléctricas<br /> de Vanguardia<br /> para la Industria y el
          Comercio
          <p
            id="hero-desc"
            class="mt-6 mb-6 text-lg md:text-xl font-normal md:font-medium leading-5 sm:mb-6 text-left md:text-left md:pr-12 text-white opacity-0 translate-y-10"
          >
            Desde el diseño hasta la puesta en marcha, WT Ingelec<br /> garantiza
            proyectos eléctricos eficientes, confiables y de vanguardia.
          </p>
        </h1>
        <div
          id="hero-btn"
          class="w-full justify-start md:justify-start items-center inline-flex opacity-0 translate-y-10"
        >
          <Button
            href="/#contact"
            variant="primary"
            class="px-6 sm:px-8 py-3 sm:py-5 text-lg font-normal leading-7"
          >
            Empieza tu proyecto
          </Button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  import { gsap } from "gsap";

  const tl = gsap.timeline({ defaults: { ease: "power3.out" } });

  tl.to("#hero-title", {
    y: 0,
    opacity: 1,
    duration: 1,
    delay: 0.2,
  })
    .to(
      "#hero-desc",
      {
        y: 0,
        opacity: 1,
        duration: 1,
      },
      "-=0.6",
    )
    .to(
      "#hero-btn",
      {
        y: 0,
        opacity: 1,
        duration: 1,
      },
      "-=0.8",
    );
</script>
