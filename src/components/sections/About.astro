<style>
  .parallax-bg {
    background-image: url("/src/assets/pics/cta.jpg");
    background-size: cover;
    background-position: bottom;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }
  @media (max-width: 1024px) {
    .parallax-bg {
      background-attachment: scroll;
    }
  }
  .shadow-text {
    text-shadow:
      0 4px 24px #000,
      0 2px 8px #000,
      0 1px 2px #000;
  }
</style>
